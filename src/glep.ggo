args "--unamed-opts --no-handle-error --long-help -a glod_args_info -f glod_parser"
package "glep"
usage "glep [OPTIONS...] -f PATTERN-FILE [FILE]..."
description "Report matching patterns in FILEs."

option "pattern-file" f
	"Read patterns from FILE."
	string typestr="FILE"

option "invert-match" v
	"Report FILEs that don't match any patterns."
	optional
