args "--unamed-opts --no-handle-error --long-help -a glod_args_info -f glod_parser"
package "glod-classify"
usage "glod-classify [OPTIONS...] [FILE]..."
description "Obtain some basic stats about the characters in FILE."

option "linewise" -
	"Instead of given a total view on the file, return stats for each line."
	optional

option "graph" -
	"Return an ASCII graph of the character distribution."
	optional

option "candle" -
	"Return an OHLCV candle."
	optional
